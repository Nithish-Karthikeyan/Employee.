<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC 
                        "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
                        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.ideas2it.model.LeaveRecord" table = "leave_record">
        <id name = "leaveId" column = "leave_id">
            <generator class = "increment"></generator>  
        </id>

        <property name = "fromDate" column = "start_date" type = "string" length = "20"></property>
        <property name = "toDate" column = "end_date" type = "string" length = "20"></property>
        <property name = "leaveType" column = "leave_type" type = "string" length = "20"></property>
        <property name = "createdAt" column = "created_at" type = "string" length = "30"></property>
        <property name = "modifiedAt" column = "modified_at" type = "string" length = "30"></property>
        <property name = "deleted" column = "deleted" type = "integer"></property>

        <many-to-one class = "com.ideas2it.model.Employee" name = "employee" column = "employee_id" insert = "false" update = "false"></many-to-one>
     </class>
</hibernate-mapping>
